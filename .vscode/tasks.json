{
    "version": "2.0.0",
    "tasks": [
       {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/CSharpWS"
      ],
      "problemMatcher": "$msCompile"
    },
      {
        "label": "C/C++: Build active file",
        "type": "shell",
        "command": "if [[ \"${file}\" == *.cpp ]]; then g++ -g \"${file}\" -o \"${fileDirname}/${fileBasenameNoExtension}\"; else gcc -g \"${file}\" -o \"${fileDirname}/${fileBasenameNoExtension}\"; fi",
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "컴파일러: C 파일은 gcc, C++ 파일은 g++을 사용합니다"
      },
      {
        "type": "dotnet",
        "task": "clean",
        "group": "clean",
        "problemMatcher": [],
        "label": "dotnet: clean"
      }
    ]
  }
